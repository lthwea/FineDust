<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.AlarmActivity"
    android:background="@color/line_and_outline_grey">


    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="지역을 선택해주세요."/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_tmp1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="지도의 가장 가까운 측정지로 선택됩니다."
            android:textSize="15dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_alarm_arrow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/personal_item_arrow" />
    </RelativeLayout>





    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="시간을 선택해주세요."/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_tmp1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오후 09시 05분"
            android:textSize="15dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_alarm_arrow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/personal_item_arrow" />
    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="반복할 요일을 선택하세요."
        android:layout_marginTop="30dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">


       <ToggleButton
           android:id="@+id/tbtn_mon"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textOn="월"
           android:textOff="월"
           android:background="@drawable/round_toggle"/>

        <ToggleButton
            android:id="@+id/tbtn_thu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOn="화"
            android:textOff="화"
            android:background="@drawable/round_toggle"/>

        <ToggleButton
            android:id="@+id/tbtn_wen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOn="수"
            android:textOff="수"
            android:background="@drawable/round_toggle"/>

        <ToggleButton
            android:id="@+id/tbtn_thr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOn="목"
            android:textOff="목"
            android:background="@drawable/round_toggle"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">


        <ToggleButton
            android:id="@+id/tbtn_fri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOn="금"
            android:textOff="금"
            android:background="@drawable/round_toggle"/>

        <ToggleButton
            android:id="@+id/tbtn_sat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOn="토"
            android:textOff="토"
            android:background="@drawable/round_toggle"/>

        <ToggleButton
            android:id="@+id/tbtn_sun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOn="일"
            android:textOff="일"
            android:background="@drawable/round_toggle"/>
    </LinearLayout>


    <Button
        android:id="@+id/btn_alarm_completed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="완료" />

</LinearLayout>


