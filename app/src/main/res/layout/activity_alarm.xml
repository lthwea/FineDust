<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.AlarmActivity"
    android:background="@color/grey">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/white"
        android:clickable="true"
        android:layout_marginBottom="20dp">

       <ImageButton
            android:layout_marginLeft="15dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/rounded"
            android:src="@mipmap/ic_keyboard_backspace_white_48dp"
            android:layout_centerVertical="true"
            android:id="@+id/ibtn_alarm_back" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="스케쥴 알람"
            android:gravity="center_vertical"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageButton
            android:id="@+id/ibtn_alarm_delete"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/rounded"
            android:src="@mipmap/ic_delete_forever_white_48dp"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="12dp" />

    </RelativeLayout>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="지역 설정"
        android:textColor="@color/black"
        android:layout_marginBottom="2dp"/>

    <RelativeLayout
        android:id="@+id/rl_loc"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:clickable="true">

        <TextView
            android:id="@+id/tv_alarm_loc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="지도의 가장 가까운 측정지로 선택됩니다."
            android:gravity="center_vertical"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/personal_item_arrow"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>









    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="시간 설정"
        android:textColor="@color/black"
        android:layout_marginBottom="2dp"/>

    <RelativeLayout
        android:id="@+id/rl_time"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:clickable="true">

        <TextView
            android:id="@+id/tv_alarm_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:gravity="center_vertical"
            android:textAlignment="center"
            android:textColor="@color/black"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/personal_item_arrow"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>





    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="반복 요일 설정"
        android:textSize="15dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/black"
        android:layout_marginBottom="2dp"/>/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <ToggleButton
            android:id="@+id/tbtn_mon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/tbtn_round"
            android:textColor="@color/black"
            android:textOff="월"
            android:textOn="월" />

        <ToggleButton
            android:id="@+id/tbtn_tue"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/tbtn_round"
            android:textColor="@color/black"
            android:textOff="화"
            android:textOn="화" />

        <ToggleButton
            android:id="@+id/tbtn_wen"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/tbtn_round"
            android:textColor="@color/black"
            android:textOff="수"
            android:textOn="수" />

        <ToggleButton
            android:id="@+id/tbtn_thu"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/tbtn_round"
            android:textColor="@color/black"
            android:textOff="목"
            android:textOn="목" />

        <ToggleButton
            android:id="@+id/tbtn_fri"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/tbtn_round"
            android:textColor="@color/black"
            android:textOff="금"
            android:textOn="금" />

        <ToggleButton
            android:id="@+id/tbtn_sat"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/tbtn_round"
            android:textColor="@color/black"
            android:textOff="토"
            android:textOn="토" />

        <ToggleButton
            android:id="@+id/tbtn_sun"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/tbtn_round"
            android:textColor="@color/black"
            android:textOff="일"
            android:textOn="일" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_alarm_completed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="완료"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@color/line_and_outline_grey"/>

</LinearLayout>


