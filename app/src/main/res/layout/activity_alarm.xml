<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.AlarmActivity"
    android:background="@color/grey">


    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="지역을 선택해주세요."
        android:textColor="@color/black"
        android:layout_marginBottom="2dp"/>

    <RelativeLayout
        android:id="@+id/rl_loc"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:clickable="true">

        <TextView
            android:id="@+id/tv_alarm_loc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="지도의 가장 가까운 측정지로 선택됩니다."
            android:gravity="center_vertical"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/personal_item_arrow"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>









    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="시간을 선택해주세요."
        android:textColor="@color/black"
        android:layout_marginBottom="2dp"/>

    <RelativeLayout
        android:id="@+id/rl_time"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:clickable="true">

        <TextView
            android:id="@+id/tv_alarm_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:gravity="center_vertical"
            android:textAlignment="center"
            android:textColor="@color/black"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/personal_item_arrow"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>





    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="반복할 요일을 선택해주세요."
        android:textSize="15dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/black"
        android:layout_marginBottom="2dp"/>/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <ToggleButton
            android:id="@+id/tbtn_mon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/tbtn_round"
            android:textOff="월"
            android:textOn="월"
            android:layout_marginRight="2.5dp"
            android:textColor="@color/black"/>

        <ToggleButton
            android:id="@+id/tbtn_thu"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/tbtn_round"
            android:textOff="화"
            android:textOn="화"
            android:layout_marginRight="2.5dp"
            android:textColor="@color/black"/>

        <ToggleButton
            android:id="@+id/tbtn_wen"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/tbtn_round"
            android:textOff="수"
            android:textOn="수"
            android:layout_marginRight="2.5dp"
            android:textColor="@color/black"/>

        <ToggleButton
            android:id="@+id/tbtn_thr"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/tbtn_round"
            android:textOff="목"
            android:textOn="목"
            android:layout_marginRight="2.5dp"
            android:textColor="@color/black"/>

        <ToggleButton
            android:id="@+id/tbtn_fri"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/tbtn_round"
            android:textOff="금"
            android:textOn="금"
            android:layout_marginRight="2.5dp"
            android:textColor="@color/black"/>

        <ToggleButton
            android:id="@+id/tbtn_sat"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/tbtn_round"
            android:textOff="토"
            android:textOn="토"
            android:layout_marginRight="2.5dp"
            android:textColor="@color/black"/>

        <ToggleButton
            android:id="@+id/tbtn_sun"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/tbtn_round"
            android:textOff="일"
            android:textOn="일"
            android:textColor="@color/black"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_alarm_completed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="완료"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@color/color_widget_green"/>

</LinearLayout>


