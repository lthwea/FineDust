<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_widget_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/widget_background"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_main_widget_loc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/ibtn_widget_update"
            android:layout_toStartOf="@+id/ibtn_widget_update"
            android:text="서울시 방배동"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_main_widget_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tv_main_widget_loc"
            android:layout_toLeftOf="@+id/ibtn_widget_setting"
            android:layout_toStartOf="@+id/ibtn_widget_setting"
            android:text="2017-04-13 09:00"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_main_widget_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="72"
            android:textStyle="bold"
            android:textSize="30dp"
            android:textColor="@color/color_dust_1"
            android:layout_below="@+id/tv_main_widget_date"/>

        <TextView
            android:id="@+id/tv_main_widget_stats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="보통"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/color_dust_1"
            android:layout_alignBaseline="@+id/tv_main_widget_value"
            android:layout_alignBottom="@+id/tv_main_widget_value"
            android:layout_toRightOf="@+id/tv_main_widget_value"
            android:layout_toEndOf="@+id/tv_main_widget_value" />


        <ImageButton
            android:id="@+id/ibtn_widget_setting"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/ic_settings_white_24dp"
            android:layout_alignTop="@+id/tv_main_widget_stats"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@android:color/transparent"/>

        <ImageButton
            android:id="@+id/ibtn_widget_update"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/ic_refresh_white_24dp"
            android:layout_above="@+id/tv_main_widget_stats"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@android:color/transparent"/>


    </RelativeLayout>

</LinearLayout>
